{% extends 'MFBAdminBundle::base.html.twig' %}


{% block content %}
    <div>
        <div class="row-fluid inner-page contact">
            <div class="span12">
                <div style="padding:20px 10px 15px 0; font-size: 24px; font-weight:300;">
                    Email template
                </div>
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div>
                    {{ form_widget(form.title, {'attr': {'class': 'required fr_input_txt fr_97_5pro breite490', 'placeholder': 'Title*'} }) }}
                    {{ form_errors(form.title) }}
                </div>
                <div>
                    {{ form_widget(form.templateCode, {'attr': {'rows': 13, 'cols': 60, 'class': 'required', 'placeholder': 'Text*'} }) }}
                    {{ form_errors(form.templateCode) }}
                </div>
                <div class="span8">
                    <table class="table table-condensed">
                        <caption>Variables</caption>
                        <thead>
                        <tr>
                            <th>PlaceHolder</th>
                            <th>Explanation</th>
                            <th>Sample Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for placeholder in variables %}
                        <tr>
                            <td>{{ placeholder.name }}</td>
                            <td>{{ placeholder.description }}</td>
                            <td>{{ placeholder.example }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="3">
                                <a href="{{ path('mfb_admin_list_possible_variables', {'emailTemplateId': entity.id }) }}" class="iframe"> Add Variable</a>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <div>
                    {{ form_widget(form.thankYouCode, {'attr': {'rows': 13, 'cols': 60, 'class': 'required', 'placeholder': 'Thank you text*'} }) }}
                    {{ form_errors(form.thankYouCode) }}
                </div>

                <div style="width:250px; padding-top:10px;">
                    <input id="sendOut" class="btn btn-left orange abstandoben breite210" value="Save" type="submit">
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}
{% extends 'MFBAdminBundle::base.html.twig' %}

{% block title %}{% trans %} Form Setup {% endtrans %}{% endblock %}

{% block content %}
    <div>
        <div class="row-fluid inner-page navLogo">

            <div style="display: block; float: left; margin: 15px 20px;">
                {% for serviceGroup in serviceGroupsList %}
                   <div>{{ serviceGroup.getName }} </div>
                {% endfor %}

            </div>

            <div style="display: block; float: left; margin: 15px 20px;">
                {% for serviceProvider in serviceProvidersList %}
                   <div> {{ serviceProvider.getFirstName }} </div>
                {% endfor %}

            </div>

            <div class="span12">
                {{ form_start(serviceGroupForm) }}

                {{ form_row(serviceGroupForm.name, {'attr': {'class': 'breite400', 'style': 'display:block'} } ) }}

                <div style="width:250px; padding-top:10px;">
                    {{ form_row(serviceGroupForm.save, {'attr': {'class': 'btn btn-left orange abstandoben breite210'} }) }}
                </div>

                {{ form_end(serviceGroupForm) }}
            </div>

            <div class="span12" style="margin-top: 35px">
                {{ form_start(serviceProviderForm) }}

                {{ form_row(serviceProviderForm.firstname, {'attr': {'class': 'breite400', 'style': 'display:block'} } ) }}
                {{ form_row(serviceProviderForm.lastname, {'attr': {'class': 'breite400', 'style': 'display:block'} } ) }}

                <div style="width:250px; padding-top:10px;">
                    {{ form_row(serviceProviderForm.save, {'attr': {'class': 'btn btn-left orange abstandoben breite210'} }) }}
                </div>

                {{ form_end(serviceProviderForm) }}
            </div>
        </div>
    </div>


{% endblock %}
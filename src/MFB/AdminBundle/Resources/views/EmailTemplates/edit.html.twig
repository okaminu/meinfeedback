{% extends 'MFBAdminBundle::base.html.twig' %}


{% block content %}
    <div>
        <div class="row-fluid inner-page contact">
            <div class="span12">
                <div style="padding:20px 10px 15px 0; font-size: 24px; font-weight:300;">
                    {% trans %} Email template {% endtrans %}
                </div>
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div>
                    {{ form_widget(form.title, {'attr': {'class': 'required fr_input_txt fr_97_5pro breite490', 'placeholder': 'Title*'} }) }}
                    {{ form_errors(form.title) }}
                </div>
                <div>
                    {{ form_widget(form.templateCode, {'attr': {'rows': 13, 'cols': 60, 'class': 'required', 'placeholder': 'Text*'} }) }}
                    {{ form_errors(form.templateCode) }}
                </div>

                <div>
                    {{ form_widget(form.thankYouCode, {'attr': {'rows': 13, 'cols': 60, 'class': 'required', 'placeholder': 'Thank you text*'} }) }}
                    {{ form_errors(form.thankYouCode) }}
                </div>
                <div class="add-variable">
                    <a href="{{ path('mfb_admin_list_possible_variables', {'emailTemplateId': entity.id }) }}" class="iframe"> {% trans %} Add Variable {% endtrans %}</a>
                </div>
                <div style="width:250px; padding-top:10px;">
                    <input id="sendOut" name="email_template" class="btn btn-left orange abstandoben breite210" value="{% trans %} Save {% endtrans %}" type="submit">
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

    <div>
        <div class="row-fluid inner-page contact">
            <div class="span12">
                <div style="padding:20px 10px 15px 0; font-size: 24px; font-weight:300;">
                    {% trans %}Thank you page template{% endtrans %}
                </div>
                {{ form_start(form_thankyou) }}
                {{ form_errors(form_thankyou) }}

                <div>
                    {{ form_widget(form_thankyou.templateCode, {'attr': {'rows': 13, 'cols': 60, 'class': 'required', 'placeholder': 'Text*'} }) }}
                    {{ form_errors(form_thankyou.templateCode) }}
                </div>

                <div class="add-variable">
                    <a href="{{ path('mfb_admin_list_possible_variables', {'emailTemplateId': thankyou_entity.id }) }}" class="iframe"> {% trans %} Add Variable {% endtrans %}</a>
                </div>
                <div style="width:250px; padding-top:10px;">
                    <input id="sendOut" name="thankyou_template" class="btn btn-left orange abstandoben breite210" value="{% trans %} Save {% endtrans %}" type="submit">
                </div>
                {{ form_end(form_thankyou) }}
            </div>

        </div>
    </div>

{% endblock %}